<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;700&display=swap");
  </style>
  <title>Home</title>
</head>

<body>
  <header><%- include('./header') %></header>
  <h1 class="CenterText">Profiles</h1>
  <section class="LikedListContainer">
    <% if (likesList.length === 0) { %>
    <p class="CenterText">No profiles left to show</p>
    <% } else { %>
    <table class="TableSpacing">
      <% likesList.forEach(likes => { %>
      <tr class="trLike">
        <td class="tdLike"><img class="ProfilePicture" src='/public/images/<%= likes.name %>.jpg' /></td>
        <td class="tdLike"><%= likes.name %>,
          <%= likes.age %></td>
        <td class="tdLike">
          <a href="/unlike/<%= likes._id %>"><img class="LikedListIcon" src="/public/images/LikedIcon.png" /></a>
        </td>
      </tr>
      <% }) %>
    </table>
    <% } %>
  </section>

  <footer><%- include('./footer') %></footer>
</body>

</html>